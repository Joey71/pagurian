{{>fixtures/doctype}}

<head>
    <title>{{data.page.slider}}</title>
    {{>fixtures/head}}
    <style media="screen">
        .table-custom td div{
            font-size: 12px;
            color: #aaa;
        }
    </style>
</head>

<body>

    {{>fixtures/header}}

    <!-- BEGIN CONTAINER -->
    <div class="page-container">

        {{>fixtures/sidebar}}

        <!-- BEGIN CONTENT -->
        <div class="page-content-wrapper">

            <div class="page-content">

                {{>fixtures/theme-panel}}

                <div class="row">
                    <div class="col-md-12">
                        <h3 class="page-title">
                            {{data.page.slider}}
                        </h3>
                    </div>
                </div>

                <!-- BEGIN PAGE CONTENT-->
                <div class="row">
                    <div class="col-md-12">
                        <input type="text" id="range" value="20" name="example_name"/>
                        <div class="markdown">
                            <pre><code class="javascript">
$p.plugin.slider("#range",{
    from:10
});
                            </code></pre>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <input type="text" id="range2" value=""  />
                        <div class="markdown">
                            <pre><code class="javascript">
$p.plugin.slider("#range2", {
    type: "double",
    grid: true,
    min: 0,
    max: 1000,
    from: 200,
    to: 800,
    prefix: "$"
});
                            </code></pre>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <input type="text" id="range3" value=""  />
                        <div class="markdown">
                            <pre><code class="javascript">
$p.plugin.slider("#range2",{
    grid: true,
    from: 3,
    force_edges:true,
    values: [
        "January", "February", "March",
        "April", "May", "June",
        "July", "August", "September",
        "October", "November", "December"
    ]
});
                            </code></pre>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <h2>参数说明</h2>
                        <hr>
                        <table class="table-custom table table-hover table-fixed dataTable">
                            <thead>
                                <tr>
                                    <th width="200">参数</th>
                                    <th width="100">默认值</th>
                                    <th width="100">数据类型</th>
                                    <th>描述</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr class="options__step">
                                    <td>type<div>data-type</div></td>
                                    <td>"single"</td>
                                    <td>string</td>
                                    <td>选择一种类型,  <code>single</code> 设置一个值,  <code>double</code> 设置一个范围</td>
                                </tr>

                                <tr>
                                    <td>min<div>data-min</div></td>
                                    <td>10</td>
                                    <td>number</td>
                                    <td>设置最小值</td>
                                </tr>
                                <tr>
                                    <td>max<div>data-max</div></td>
                                    <td>100</td>
                                    <td>number</td>
                                    <td>设置最大值</td>
                                </tr>
                                <tr>
                                    <td>from<div>data-from</div></td>
                                    <td>min</td>
                                    <td>number</td>
                                    <td>设置左手柄（或单柄）的起始位置</td>
                                </tr>
                                <tr>
                                    <td>to<div>data-to</div></td>
                                    <td>max</td>
                                    <td>number</td>
                                    <td>设置右手柄的起始位置</td>
                                </tr>
                                <tr class="options__step">
                                    <td>step<div>data-step</div></td>
                                    <td>1</td>
                                    <td>number</td>
                                    <td>设置每一步滑动的值，对于0，可以是小数</td>
                                </tr>

                                <tr>
                                    <td>min_interval<div>data-min-interval</div></td>
                                    <td>—</td>
                                    <td>number</td>
                                    <td>当类型为double，设置最小范围值</td>
                                </tr>
                                <tr>
                                    <td>max_interval<div>data-max-interval</div></td>
                                    <td>—</td>
                                    <td>number</td>
                                    <td>当类型为double，设置最大范围值</td>
                                </tr>


                                <tr class="options__step">
                                    <td>values<div>data-values</div></td>
                                    <td>[]</td>
                                    <td>array</td>
                                    <td>设置可能的滑块值的数组，可以是数字或字符串。如果该值设置，min，max和step都无效。</td>
                                </tr>

                                <tr class="options__new">
                                    <td>from_fixed<div>data-from-fixed</div></td>
                                    <td>false</td>
                                    <td>boolean</td>
                                    <td>禁止拖动左手柄（或者单手柄）。</td>
                                </tr>
                                <tr class="options__new">
                                    <td>from_min<div>data-from-min</div></td>
                                    <td>min</td>
                                    <td>number</td>
                                    <td>设置左手柄拖动的最小值</td>
                                </tr>
                                <tr class="options__new">
                                    <td>from_max<div>data-from-max</div></td>
                                    <td>max</td>
                                    <td>number</td>
                                    <td>设置左手柄拖动的最大值</td>
                                </tr>


                                <tr class="options__new">
                                    <td>to_fixed<div>data-to-fixed</div></td>
                                    <td>false</td>
                                    <td>boolean</td>
                                    <td>禁止拖动右手柄。</td>
                                </tr>
                                <tr class="options__new">
                                    <td>to_min<div>data-to-min</div></td>
                                    <td>min</td>
                                    <td>number</td>
                                    <td>右手柄拖动的最小值</td>
                                </tr>
                                <tr class="options__new">
                                    <td>to_max<div>data-to-max</div></td>
                                    <td>max</td>
                                    <td>number</td>
                                    <td>设置左手柄拖动的最大值</td>
                                </tr>


                                <tr>
                                    <td>prettify_enabled<div>data-prettify-enabled</div></td>
                                    <td>true</td>
                                    <td>boolean</td>
                                    <td>设置长数字的可读性。 10000000 → 10 000 000</td>
                                </tr>
                                <tr class="options__new">
                                    <td>prettify_separator<div>data-prettify-separator</div></td>
                                    <td>" "</td>
                                    <td>string</td>
                                    <td>设置长数字的可读性。 10 000, 10.000, 10-000 и т.п.</td>
                                </tr>
                                <tr class="options__new options__step">
                                    <td>prettify<div>—</div></td>
                                    <td>null</td>
                                    <td>function</td>
                                    <td>
                                        设置你自己的美化功能。可以是任何东西。
                                    </td>
                                </tr>

                                <tr class="options__new options__step">
                                    <td>force_edges<div>data-force-edges</div></td>
                                    <td>false</td>
                                    <td>boolean</td>
                                    <td>强制文字显示在控件内部</td>
                                </tr>

                                <tr class="options__new">
                                    <td>keyboard<div>data-keyboard</div></td>
                                    <td>false</td>
                                    <td>boolean</td>
                                    <td>启用键盘操作. Move left: ←, ↓, A, S. Move right: →, ↑, W, D.</td>
                                </tr>
                                <tr class="options__new options__step">
                                    <td>keyboard_step<div>data-keyboard-step</div></td>
                                    <td>5</td>
                                    <td>number</td>
                                    <td>键盘操作移动的步数。</td>
                                </tr>

                                <tr>
                                    <td>grid<div>data-grid</div></td>
                                    <td>false</td>
                                    <td>boolean</td>
                                    <td>启用刻度尺</td>
                                </tr>
                                <tr>
                                    <td>grid_margin<div>data-grid-margin</div></td>
                                    <td>true</td>
                                    <td>boolean</td>
                                    <td>设置刻度尺左右两边是否有边距</td>
                                </tr>
                                <tr class="options__new">
                                    <td>grid_num<div>data-grid-num</div></td>
                                    <td>4</td>
                                    <td>number</td>
                                    <td>设置刻度单元数</td>
                                </tr>
                                <tr class="options__new options__step">
                                    <td>grid_snap<div>data-grid-snap</div></td>
                                    <td>false</td>
                                    <td>boolean</td>
                                    <td>刻度尺单元网格滑块步（步参数）。如果启用，grid_num不会用。</td>
                                </tr>

                                <tr>
                                    <td>hide_min_max<div>data-hide-min-max</div></td>
                                    <td>false</td>
                                    <td>boolean</td>
                                    <td>隐藏最大值最小值的显示</td>
                                </tr>
                                <tr class="options__step">
                                    <td>hide_from_to<div>data-hide-from-to</div></td>
                                    <td>false</td>
                                    <td>boolean</td>
                                    <td>隐藏左右手柄上的数值</td>
                                </tr>

                                <tr>
                                    <td>prefix<div>data-prefix</div></td>
                                    <td>—</td>
                                    <td>string</td>
                                    <td>设置值的前缀。比如将数量100设置为:$100</td>
                                </tr>
                                <tr>
                                    <td>postfix<div>data-postfix</div></td>
                                    <td>—</td>
                                    <td>string</td>
                                    <td>值设置后缀。比如将数值100设置为：100K</td>
                                </tr>
                                <tr>
                                    <td>max_postfix<div>data-max-postfix</div></td>
                                    <td>—</td>
                                    <td>string</td>
                                    <td>给最大值设置后缀</td>
                                </tr>



                                <tr class="options__step">
                                    <td>input_values_separator<div><sup>data-input-values-separator</sup></div></td>
                                    <td>" ; "</td>
                                    <td>string</td>
                                    <td>设置input中两个值的分隔符。</td>
                                </tr>

                                <tr class="options__step">
                                    <td>disable<div>data-disable</div></td>
                                    <td>false</td>
                                    <td>boolean</td>
                                    <td>禁用。</td>
                                </tr>

                                <tr>
                                    <td>onStart<div>—</div></td>
                                    <td>null</td>
                                    <td>function</td>
                                    <td>回调函数，滑动的时候启动。</td>
                                </tr>
                                <tr>
                                    <td>onChange<div>—</div></td>
                                    <td>null</td>
                                    <td>function</td>
                                    <td>回调函数，值发生变化的时候启动。</td>
                                </tr>
                                <tr>
                                    <td>onFinish<div>—</div></td>
                                    <td>null</td>
                                    <td>function</td>
                                    <td>回调函数，一次滑动结束的时候启动。</td>
                                </tr>
                                <tr class="options__new">
                                    <td>onUpdate<div>—</div></td>
                                    <td>null</td>
                                    <td>function</td>
                                    <td>回调函数。触发<code>update</code> 或者 <code>reset</code>方式的时候启用。</td>
                                </tr>
                            </tbody>
                        </table>


                        <h3>更多实例</h3>
                        <p>
                            <a href="http://ionden.com/a/plugins/ion.rangeSlider/demo.html" target="_blank">
                                 http://ionden.com/a/plugins/ion.rangeSlider/demo.html
                            </a>
                        </p>
                    </div>
                </div>
                <!-- END PAGE CONTENT-->
            </div>
        </div>
        <!-- END CONTENT -->
    </div>
    <!-- END CONTAINER -->


    {{>fixtures/footer}}
    <script type="text/javascript">
        pagurian.call("modules/slider/app", function(app) {
            app.page.index();
        });
    </script>

    {{>fixtures/tracker}}

</body>

</html>

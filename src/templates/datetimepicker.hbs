			{{>fixtures/theme-panel}}
			<div class="row">
				<div class="col-md-12">
					<h3 class="page-title">
					{{data.page.datepicker}}
					</h3>
				</div>
			</div>

			 <div class="tabs-wrap">
			   <ul  class="nav nav-tabs">
					<li>
						<a href="datepicker.html" >Date</a>
					</li>
					<li >
						<a href="daterangepicker.html" >Date Range</a>
					</li>
					<li class="active">
                        <a href="datetimepicker.html" >Date Time</a>

    data: [
        {"source": "IOS-签到领金币", "target": "Entry", "value": 83034},
        {"source": "IOS-进入iBunk", "target": "Entry", "value": 8098},
        {"source": "IOS-油费随手记", "target": "Entry", "value": 6868},
        {"source": "IOS-幸运大抽奖", "target": "Entry", "value": 5442},
        {"source": "IOS-违章查询", "target": "Solid", "value": 4336},
        {"source": "IOS-幸运大抽奖", "target": "IOS-签到领金币", "value": 61785},
        {"source": "IOS-进入个人中心", "target": "IOS-签到领金币", "value": 1797},
        {"source": "IOS-油费随手记", "target": "IOS-签到领金币", "value": 1238},
        {"source": "IOS-违章查询", "target": "IOS-签到领金币", "value": 1079}
    ]
});
</code></pre>

                    {{>fixtures/echarts-footer}}

                </div>
            </div>
        </div>
        <!-- END PAGE CONTENT-->
    {{/inline}}

    {{#*inline "appScript"}}
        <script type="text/javascript">
            pagurian.call([
                "modules/echarts-sankey/app",
                "plugins/echarts/loader"
            ], function (app) {
                app.page.sankey();
            });

        </script>
    {{/inline}}

{{/layouts/base}}
